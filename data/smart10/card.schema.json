{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://smartiq.local/schemas/card.schema.json",
  "title": "SmartIQ Card",
  "type": "object",
  "required": [
    "id",
    "topic",
    "category",
    "language",
    "question",
    "options",
    "correct"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 3 },
    "topic": {
      "type": "string",
      "enum": ["History", "Sports", "Geography", "Culture", "Science", "Technology"]
    },
    "category": {
      "type": "string",
      "enum": ["TRUE_FALSE", "NUMBER", "ORDER", "CENTURY_DECADE", "COLOR", "OPEN"]
    },
    "language": { "type": "string", "enum": ["en", "et"] },
    "question": { "type": "string", "minLength": 6, "maxLength": 220 },
    "options": {
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "items": { "type": "string", "minLength": 1, "maxLength": 60 }
    },
    "correct": { "type": "object" },
    "explanation": { "type": "string", "maxLength": 400 },
    "difficulty": { "type": "string" },
    "source": { "type": "string" }
  },
  "allOf": [
    {
      "if": { "properties": { "category": { "const": "TRUE_FALSE" } } },
      "then": {
        "properties": {
          "correct": {
            "type": "object",
            "required": ["correctIndexes"],
            "properties": {
              "correctIndexes": {
                "type": "array",
                "items": { "type": "integer", "minimum": 0, "maximum": 9 },
                "minItems": 1,
                "maxItems": 9,
                "uniqueItems": true
              }
            }
          }
        }
      }
    },
    {
      "if": { "properties": { "category": { "const": "ORDER" } } },
      "then": {
        "properties": {
          "correct": {
            "type": "object",
            "required": ["correctOrder"],
            "properties": {
              "correctOrder": {
                "type": "array",
                "items": { "type": "integer", "minimum": 1, "maximum": 10 },
                "minItems": 10,
                "maxItems": 10
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "category": {
            "enum": ["NUMBER", "CENTURY_DECADE", "COLOR", "OPEN"]
          }
        }
      },
      "then": {
        "properties": {
          "correct": {
            "type": "object",
            "required": ["correctIndex"],
            "properties": {
              "correctIndex": { "type": "integer", "minimum": 0, "maximum": 9 }
            }
          }
        }
      }
    }
  ]
}
