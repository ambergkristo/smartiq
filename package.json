{
  "name": "smartiq",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev:backend": "mvn -q -f backend/pom.xml spring-boot:run",
    "dev:backend:8081": "mvn -q -f backend/pom.xml spring-boot:run -Dspring-boot.run.arguments=--server.port=8081",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:frontend:5173": "npm --prefix frontend run dev -- --port 5173",
    "dev:all": "concurrently -n backend,frontend -c cyan,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:smoke": "concurrently -n backend,frontend -c cyan,green \"npm run dev:backend:8081\" \"npm run dev:frontend:5173\"",
    "generate:cards": "node tools/generate-cards.js",
    "review:cards": "node tools/review-cards.js",
    "review:summary": "node tools/review-summary.js",
    "validate:cards": "node tools/validate_cards_v2.js data/smart10/cards.en.json --max-warnings=0",
    "validate:cards:et": "node tools/validate_cards_v2.js data/smart10/cards.et.json --max-warnings=0",
    "validate:locale-packs": "node tools/validate_locale_packs.js data/smart10",
    "audit:locale:coverage": "node tools/audit_locale_coverage.js data/smart10 --required=en,et --min-per-combo=30",
    "score:cards:quality": "node tools/score_cards_quality.js data/smart10/cards.en.json",
    "score:cards:quality:et": "node tools/score_cards_quality.js data/smart10/cards.et.json",
    "score:cards:quality:ci": "node tools/score_cards_quality.js data/smart10/cards.en.json --fail-threshold=0.80",
    "score:cards:quality:ci:et": "node tools/score_cards_quality.js data/smart10/cards.et.json --fail-threshold=0.80",
    "validate:cards:legacy": "node tools/validate-cards.js data/smart10/cards.en.json",
    "test:golden": "node tools/validate-cards.js data/clean/golden/golden.dataset.json",
    "pipeline:cards": "node tools/build-content-pipeline.js",
    "load:test": "node tools/load-test.js",
    "smoke:test": "node tools/smoke-test.js",
    "validate:deploy-env": "node tools/validate-deploy-env.js",
    "stability:gate": "node tools/stability-gate.js",
    "verify:runtime:deck": "node scripts/verify_runtime_deck.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
