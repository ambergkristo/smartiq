# Copy this file to .env and fill values for local development only.

# Backend
BACKEND_PORT=8080
JAVA_OPTS=
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/smartiq
SPRING_DATASOURCE_USERNAME=smartiq
SPRING_DATASOURCE_PASSWORD=smartiq
SMARTIQ_IMPORT_ENABLED=true
SMARTIQ_IMPORT_PATH=../data/clean
SMARTIQ_POOL_ENABLED=true
MIN_BANK_SIZE=1000
POOL_LOW_WATERMARK=800
POOL_TARGET=1200
SMARTIQ_BLOCK_ON_LOW_BANK=false
SMARTIQ_TRIGGER_PIPELINE_ON_LOW_BANK=false
SMARTIQ_PIPELINE_COMMAND=npm run pipeline:cards
SMARTIQ_SESSION_DEDUP_ENABLED=true
SMARTIQ_SESSION_TTL_MINUTES=120
SMARTIQ_SESSION_MAX=50000
SMARTIQ_CORS_ALLOWED_ORIGIN_LOCAL=http://localhost:5173
SMARTIQ_CORS_ALLOWED_ORIGIN_PUBLIC=https://smartiq.vercel.app
SPRING_PROFILES_ACTIVE=dev

# Frontend
FRONTEND_PORT=3000
API_BASE_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080
BACKEND_PUBLIC_URL=https://smartiq-backend.onrender.com
FRONTEND_PUBLIC_URL=https://smartiq.vercel.app

# Data/content pipeline
RAW_DATA_PATH=./data/raw
CLEAN_DATA_PATH=./data/clean
